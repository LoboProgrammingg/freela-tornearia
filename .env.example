# Configurações do Django
DEBUG=True
SECRET_KEY=sua-chave-secreta-aqui-gere-uma-nova-para-producao
ALLOWED_HOSTS=localhost,127.0.0.1,.railway.app

# Banco de Dados (PostgreSQL para produção)
# Para desenvolvimento local com PostgreSQL:
DATABASE_URL=postgresql://usuario:senha@localhost:5432/tornearia_jair
# Para Railway, a variável DATABASE_URL será configurada automaticamente

# Configurações de Email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-de-app

# Railway configura automaticamente:
# - DATABASE_URL (PostgreSQL)
# - PORT (porta do servidor)

# Para produção no Railway, adicione:
CSRF_TRUSTED_ORIGINS=https://seu-app.railway.app
SECURE_SSL_REDIRECT=True
